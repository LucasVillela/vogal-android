<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notebookTitleTextView"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/VOGAL_GREY"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/totalNotesTextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/notebookTitleTextView"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/notebook_select" />

    <TextView
        android:id="@+id/lastModifiedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notebookTitleTextView"
        android:text="TextView"
        android:textColor="@color/VOGAL_GREY"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/totalNotesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/VOGAL_GREY"
        android:textSize="12sp"
        android:layout_below="@+id/notebookTitleTextView"
        android:layout_toEndOf="@+id/lastModifiedTextView"
        android:layout_marginStart="30dp" />

</RelativeLayout>
