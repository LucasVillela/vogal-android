<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notebookTitleTextView"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/notebook_select"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/notebookTitleTextView" />

    <TextView
        android:id="@+id/lastModifiedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentStart="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/totalNotesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notebookTitleTextView"
        android:layout_toEndOf="@+id/lastModifiedTextView"
        android:text="TextView" />

</RelativeLayout>
